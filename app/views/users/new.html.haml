%section.register.container
	.row
		.col-sm-10.col-sm-offset-1
			= bootstrap_form_for(@user, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-5") do |f|
				%header
					%h1 Register
				%fieldset
					= f.email_field :email, label: "Email Address"
					= f.password_field :password
					= f.text_field :first_name, label: "First Name"
					= f.text_field :last_name, label: "Last Name"
					= f.form_group :user_type, label: {text: "User Type"} do
						%p Are you a Nonprofit?
						= f.radio_button :user_group, "nonprofit"
						%p Are you a Volunteer?
						= f.radio_button :user_group, "volunteer"
					= f.submit "Create", class: "btn btn-success"
