.row#inbox-wrapper
  .col-lg-2#tabs
    %ul.nav.nav-tabs.nav-stacked
      %li
        = link_to "Inbox", conversations_path
      %li 
        %a{:href => "#"}Messages
      %li 
        %a{:href => "#"}Projects
      %li 
        %a{:href => "#"}Sent
      %li 
        %a{:href => "#"}Archived
  .col-lg-9 
    - if @conversations
      - @conversations.each do |conversation|
        = render 'shared/conversation_thumbnail', conversation: conversation