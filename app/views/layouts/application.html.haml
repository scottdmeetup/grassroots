!!! 5
%html(lang="en-US")
  %head
    %title "Grassroots"
    %meta(charset="UTF-8")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    = csrf_meta_tag
    = stylesheet_link_tag "application"
    = javascript_include_tag "application"
    = cloudinary_js_config
  - if current_user
    %body.logged-in
      %header
        = render 'shared/header'
      .container
        .row.row-custom 
          = render 'shared/sidebar'
          .col-lg-10.col-lg-offset-2.col-sm-9.col-sm-offset-3#active-pane
            = render 'shared/messages'
            = yield
          .col-lg-10.col-lg-offset-2.col-sm-9.col-sm-offset-3#footer-wrapper
            %footer
              = render 'shared/footer'
  - else 
    %body.logged-out
      %header
        = render 'shared/header'
      .container
        .row 
          = render 'shared/sidebar'
        .row
          = render 'shared/messages'
          = yield
          .col-lg-12#footer-wrapper
            %footer
              = render 'shared/landing_footer'