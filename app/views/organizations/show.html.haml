.container
  .container-wrapper
    .row
      .col-lg-2.col-sm-12
        %a.thumbnail.img-org{href: ""}
          %img{alt: "", "data-src" => "holder.js/100%x180"}/
      .col-lg-10.col-sm-12
        %h1 
          = @organization.name
        .row
          .col-lg-3.col-md-3
            %h4.org-head
              %strong
                = @organization.ruling_year
            %h4.org-head 
              %strong 
                = @organization.street1
                = @organization.street2
                = @organization.city
                = @organization.state_id
                = @organization.zip
            %h4.org-head 
              %strong Budget: $22,000,000.00
            %h4.org-head 
              %strong 
                = "Cause: #{@organization.ntee_major_category_id}"
          .col-lg-6.col-lg-offset-1.col-md-6.col-md-offset-1
            %p 
              = @organization.mission_statement
.container
  .row.row-custom
    .col-lg-6
      %h2 Projects
    .col-lg-6
      %button.btn.btn-primary.btn-lg.pull-right.btn-project{:type => "button"} 
        = link_to "Create a Project", new_organization_admin_project_path(organization_id: @organization.id)
.container
  .container-wrapper
    .row
      - @organization.projects.each do |project|
        = render 'shared/project_thumbnail', project: project
             
