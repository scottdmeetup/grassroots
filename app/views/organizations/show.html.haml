.row#profile-details-row
  .col-lg-3
    %a.thumbnail.img-org{href: ""}
      %img{alt: "", "data-src" => "holder.js/100%x180"}/
  .col-lg-8#org-info
    %h1 
      = @organization.name
    .row
      .col-lg-3
        %h4.org-head
          %strong
            = @organization.ruling_year
        %h4.org-head 
          %strong 
            = @organization.street1
            = @organization.street2
            = @organization.city
            = @organization.state_id
            = @organization.zip
        %h4.org-head 
          %strong Budget: $22,000,000.00
        %h4.org-head 
          %strong 
            = "Cause: #{@organization.ntee_major_category_id}"
      .col-lg-6.col-lg-offset-1
        %p 
          = @organization.mission_statement

.container-wrapper 
  .row.row-custom
    .col-lg-6
      %h2 Projects
    .col-lg-6
      %btn
        = link_to "Create a Project", new_organization_admin_project_path(organization_id: @organization.id), class: "btn btn-primary btn-lg pull-right btn-project"

.row
  %ul.nav.nav-tabs
    %li{:class => ('active' if params[:tab].nil?)}
      = link_to "Open #{@organization.open_projects.count}", organization_path(@organization)
    
    %li{:class => ('active' if params[:tab] == 'in production')}
      = link_to "In Production #{@organization.in_production_projects.count}", organization_path(@organization, tab: 'in production') 
  
    %li{:class => ('active' if params[:tab] == 'pending approval')}
      = link_to "Completion Request #{@organization.pending_approval_projects.count}", organization_path(@organization, tab: 'pending approval')
  
    %li{:class => ('active' if params[:tab] == 'completed')}
      = link_to "Completed #{@organization.completed_projects.count}", organization_path(@organization, tab: 'completed')
  
    %li{:class => ('active' if params[:tab] == 'unfinished')}
      = link_to "Unfinished #{@organization.unfinished_projects.count}", organization_path(@organization, tab: 'unfinished')

  - if params[:tab].nil?
    - @organization.open_projects.each do |project|
      = render 'shared/project_thumbnail', project: project
  - elsif params[:tab] == 'in production'
    - @organization.in_production_projects.each do |project|
      = render 'shared/project_thumbnail', project: project
  - elsif params[:tab] == 'pending approval'
    - @organization.pending_approval_projects.each do |project|
      = render 'shared/project_thumbnail', project: project
  - elsif params[:tab] == 'completed'
    - @organization.completed_projects.each do |project|
      = render 'shared/project_thumbnail', project: project
  - elsif params[:tab] == 'unfinished'
    - @organization.unfinished_projects.each do |project|  
      = render 'shared/project_thumbnail', project: project
             

