#project-details
  .container-wrapper
    .row.row-custom
      .col-lg-6.col-lg-offset-1.project-board
        %h2 
          = @project.title
        %p 
          = @project.description
        .form-group
          %btn
          - if @project.administrator == current_user
            = link_to "Edit Project", edit_organization_admin_project_path(@project.id), class: "btn btn-primary btn-lg btn-project"
          - elsif @project.state == "open"
            = link_to "Request to Join", new_volunteer_application_path(project_id: @project.id), class: "btn btn-primary btn-lg btn-project" 
          - elsif @project.state == "in production"
            = link_to "Project Complete", new_private_message_path(project_id: @project.id), class: "btn btn-primary btn-lg btn-project"  
      .col-lg-4 
        %div.project-notice.open
          %p.bold.text-alert= "Project is #{@project.state}"
        %p.bold.gr-green-font Deadline
        %div.notice 
          %span= @project.deadline
        %p.bold.gr-green-font Cause
        %div.notice 
          %span= @project.causes
        %p.bold.gr-green-font Skills
        %div.notice
          %span= @project.skills
        %p.bold.gr-green-font Estimated Hours
        %div.notice
          %span= @project.estimated_hours
        %p.bold.gr-green-font Organization
        %div.notice-wrapper
          %button.notice
            = link_to @project.organization.name, organization_path(@project.organization.id)
          %img.testing{:src => "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRJdY7uIWUze-daCnYOvAq3oXVWI1pnUZXs2Y4UK3SmyjJx_fMQvVNcmdgk"}/
        %p.bold.gr-green-font Project Admin
        %div
          %button.notice= link_to "#{@project.project_admin.first_name} #{@project.project_admin.last_name}", user_path(@project.project_admin.id)
          %img.testing{:src => "https://fbcdn-profile-a.akamaihd.net/hprofile-ak-ash2/t1.0-1/c204.44.552.552/s160x160/303330_10100328964694072_324662327_n.jpg"}
        %p.bold.gr-green-font Volunteers
        %div
          %button.notice


            
        
        
-#
  #organization-details
    .container-wrapper 
      .row.row-custom 
        .col-lg-2
          %h2
        .col-lg-8
          %h1
            = @project.state == "open " ? "Volunteer Requests" : "Project Volunteer"
          - @project.applicants.each do |user|
            - if user.organization != @project.organization
              .col-lg-3.col-sm-4
                .thumbnail.thumbnail-staff
                  %img.img-responsive.img-staff{:src => "https://fbcdn-profile-a.akamaihd.net/hprofile-ak-ash2/t1.0-1/c204.44.552.552/s160x160/303330_10100328964694072_324662327_n.jpg"}
                  .caption
                    %h4
                      = link_to "#{user.first_name} #{user.last_name}", user_path(user.id)
                      - if @project.project_admin == current_user
                        - if @project.state == "open"
                          .btn-group
                            %button.btn.btn-default.dropdown-toggle{"data-toggle" => "dropdown", type: "button"}
                              Accept
                              %span.caret
                            %ul.dropdown-menu{role: "menu"}
                              %li
                                = link_to "Reply (before accepting)", conversations_path
                              %li
                                %a{href: "#"} Ignore Request
                              %li.divider
                              %li
                                %a{href: "#"} Accept
      
