.row.row-custom#project-index-wrapper
  .col-lg-10.pull-left.white
    - @projects.each do |project|
      = render 'shared/project_thumbnail', project: project         
  .col-lg-2.pull-right
    %div#project-search-wrapper
      .form-group
        = form_tag search_projects_path, method: 'get' do
          %input.form-control{:placeholder => "Search by project title or project description", :type => "text", :id => "project-search-bar", :name => "search_term"}
          %h3 Project Type
          %label 
            %input{:name => 'project_type[]', :type => "checkbox", :value => "Graphic Design"}
            Graphic Design
          %label
            %input{:name => 'project_type[]', :type => "checkbox", :value => "Web Development"}
            Web Development
          %label
            %input{:name => 'project_type[]', :type => "checkbox", :value => "Accounting"}
            Accounting
          %label 
            %input{:name => 'project_type[]', :type => "checkbox", :value => "Fundraising"}
            Fundraising
          %label 
            %input{:name => 'project_type[]', :type => "checkbox", :value => "Business Consulting"}
            Business Consulting
          %h3 Cause
          %label
            %input{:name => 'causes', :type => "checkbox", :value => "Animals"}
            Animal
          %label 
            %input{:name => 'causes', :type => "checkbox", :value => "Human Rights"}
            Human Rights
          %label
            %input{:name => 'causes', :type => "checkbox", :value => "Social Good"}
            Social Good
          = submit_tag "Search", :id => "project-filter-submit"